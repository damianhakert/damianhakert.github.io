%footer.footer
  = partial "includes/logos/footer_logo.svg"
  .animated.container
    %ul.text-center.footer-social
      %li
        = link_to('https://twitter.com/gitlab') do
          %i.fa.fa-twitter
          %span.sr-only Twitter
      %li
        = link_to('https://www.facebook.com/gitlab') do
          %i.fa.fa-facebook
          %span.sr-only Facebook
      %li
        = link_to('https://www.youtube.com/channel/UCnMGQ8QHMAnVIsI3xJrihhg') do
          %i.fa.fa-youtube
          %span.sr-only YouTube
      %li
        = link_to('https://www.linkedin.com/company/gitlab-com') do
          %i.fa.fa-linkedin
          %span.sr-only LinkedIn
    .row
      .col-sm-6.col-md-3.col-lg-2.col-lg-offset-2.footer-link-holder
        %h3.footer-link-title Products
        %ul.animated.footer-links
          %li= link_to('Features',  '/features')
          %li= link_to('Products',  '/products')
          %li= link_to('Enterprise Edition',  '/gitlab-ee')
          %li= link_to('Community Edition',  '/downloads')
          %li= link_to('GitLab.com',         '/gitlab-com/')
          %li= link_to('GitLab Hosted',      'https://githost.io/')
      .col-sm-6.col-md-3.col-lg-2.footer-link-holder
        %h3.footer-link-title Services
        %ul.animated.footer-links
          %li= link_to('Resellers', '/resellers/')
          %li= link_to('Consultancy', '/consultancy/')
          %li= link_to('Development', '/development/')
          %li= link_to('Training',    '/training/')
      .col-sm-6.col-md-3.col-lg-2.footer-link-holder
        %h3.footer-link-title Community
        %ul.animated.footer-links
          %li= link_to('Source Code',   'https://gitlab.com/groups/gitlab-org')
          %li= link_to('Core Team',     '/core-team/')
          %li= link_to('Contributors',  'http://contributors.gitlab.com/')
          %li= link_to('Documentation', 'https://docs.gitlab.com/')
          %li= link_to('Getting Help',  '/getting-help/')
          %li= link_to('Contributing',  '/contributing/')
          %li= link_to('Applications',  '/applications/')
          %li= link_to('Hall of Fame',  '/mvp/')
      .col-sm-6.col-md-3.col-lg-2.footer-link-holder
        %h3.footer-link-title Company
        %ul.animated.footer-links
          %li= link_to('Blog',            '/blog/')
          %li= link_to('Press and Logos', '/press/')
          %li= link_to('About Us',        '/about/')
          %li= link_to('Team',            '/team/')
          %li= link_to('Handbook',        '/handbook/')
          %li
            = link_to '/jobs/' do
              - if open_jobs.count > 0
                = pluralize(open_jobs.count, 'Open Job')
              - else
                Jobs
          %li= link_to('Terms',           '/terms/')
          %li= link_to('Contact Us',      '/contact/')

- full_path = current_page.file_descriptor.relative_path
.animated.text-center.source-link
  This page is generated from
  = link_to('a public file on GitLab.com', "#{data.site.repo}blob/master/source/#{full_path}", class: 'external-source-link')
  &mdash; merge requests with improvements are
  = succeed('.') do
    = link_to('very welcome', "#{data.site.repo}blob/master/CONTRIBUTING.md", class: 'external-source-link')
  = partial "includes/cc-license"
= partial "includes/layout/scripts"
= partial "includes/google/remarketing"

