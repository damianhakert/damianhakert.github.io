- prev_article = current_article.previous_article
- next_article = current_article.next_article

- if prev_article || next_article
  %nav{ "aria-label" => "Blog post pager" }
    %ul.pager
      - if prev_article
        %li.pull-left
          = link_to "Previous", prev_article.url, title: prev_article.title
      - if next_article
        %li.pull-right
          = link_to "Next", next_article.url, title: next_article.title
