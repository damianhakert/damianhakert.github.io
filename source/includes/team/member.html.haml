.col-xl-3.col-lg-4.col-md-4.col-sm-6.col-xs-12
  - anchor = member.twitter || member.gitlab
  .member{class: ("pet" if is_pet), id: anchor}
    .card
      .front
        - if is_pet
          = image_tag "/images/team/pets/#{member.picture}", alt: member.name, width: 200, height: 200
        - else
          - photo = image_tag "/images/team/#{member.picture}", alt: member.name, width: 200, height: 200
          - if anchor
            = link_to photo, "##{anchor}"
          - else
            = photo

        %h3
          = member.name
        %h4
          = member.role
          - if member.specialty
            %h5
              = member.specialty
              Specialist
        - if member.reports_to
          %h5
            Reports to
            = member.reports_to
        - if member.locality || member.country
          - location = [member.locality, member.country].compact.join(", ")
          %h5
            Lives in
            = link_to location, "https://maps.google.com?q=#{location}"
        - if member.maintains
          %ul
            = member.maintains
        .social
          - if member.twitter
            %a{href: "https://twitter.com/#{member.twitter}"}
              %span.sr-only
                Twitter
              %i.fa.fa-twitter
          - if member.gitlab
            %a{href: "https://gitlab.com/u/#{member.gitlab}"}
              %span.sr-only
                GitLab
              = partial "includes/logos/logo_sq.svg"
        .bio
          %p
            = member.story
