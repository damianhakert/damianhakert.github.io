%section.faster-iteration.no-background-color-theme
  .container
    %h2.section-title Iterate faster than your competition
    %p.section-description Move faster from idea to production with built-in workﬂow best practices.
    .feature-gallery.js-feature-gallery
      .selected-feature-image-wrap.row.js-selected-feature-image-wrap
        %img.img-responsive.selected.col-md-8.col-md-offset-2{src: "/images/gitlab_ee/screenshots/07-gitlab-ci.png", :alt => "GitLab CI preview", data: { 'feature-id' => 'ci'}}
        %img.img-responsive.col-md-8.col-md-offset-2{src: "/images/gitlab_ee/screenshots/08-review-apps.png", :alt => "Deploys preview", data: { 'feature-id' => 'deploys'}}
        %img.img-responsive.col-md-8.col-md-offset-2{src: "/images/gitlab_ee/screenshots/09-pipeline-graph.png", :alt => "Pipeline graph preview", data: { 'feature-id' => 'pipeline'}}
      %ul.feature-list.row.js-select-zone-wrap
        %li.feature-select-zone.col-sm-4.selected{ data: { 'feature-id' => 'ci'}}
          %h4.feature-title GitLab CI
          %p.feature-description  Run tests on every merge request and merge with conﬁdence.
        %li.feature-select-zone.col-sm-4{ data: { 'feature-id' => 'deploys'}}
          %h4.feature-title Manual or automatic deploys
          %p.feature-description Deﬁne your CI/CD Pipeline and deploy cha nges on your terms.
        %li.feature-select-zone.col-sm-4{ data: { 'feature-id' => 'pipeline'}}
          %h4.feature-title Pipeline Graph
          %p.feature-description Visualize your pipelines and easily ﬁx anything that fails.
