- data.features.each do |feature_block|
  .panel.panel-success
    .panel-heading
      %h2.panel-title
        = feature_block.title
    %table.table.compare-table
      %thead
        %tr
          %th
          %th.ce-col.text-center Community Edition
          %th.ee-col.text-center Enterprise Edition Starter
          %th.eep-col.text-center Enterprise Edition Premium
      %tbody.header.first
        - feature_block.features.each do |feature|
          %tr
            %td
              %a{href: feature.link}
                = feature.description
            %td.ce-col.text-center
              - if (feature.in_ce) || feature.only_in_ce
                %i.fa.fa-check
            %td.ee-col.text-center
              - if (feature.in_ce || feature.in_ee) || feature.only_in_ee
                %i.fa.fa-check
            %td.eep-col.text-center
              - if (feature.in_ce || feature.in_ee || feature.in_eep) || feature.only_in_eep
                %i.fa.fa-check
