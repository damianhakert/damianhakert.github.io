.page-container.upcoming-events.text-center.animated
  .container
    %h1.page-headline
      Upcoming Events
    %h3.subheader
      Tagline about upcoming events goes here
  .row
    %ul.event-list{role: "navigation"}
      -data.events.each do |event|
        %li
          .event-headers
            -# The event title and dates
            %h2.event-topic
              = event.topic
            %h2.event-date
              = event.date
            .clear-floats
          .event-subheaders
            -# The event type and location
            %h4.event-type
              = event.type
            %h4.event-location
              = event.location
            .clear-floats
          %div
            %p.event-description
              = event.description
          .event-buttons
            -# Social buttons
            .buttons
              %button.btn.featured-item-button-events{type:"button"}
                Join Us!
              %button.btn.featured-item-button-events{type:"button", style:"margin-left:15px;"}
                Learn More
            .clear-floats
          .social-tags
            -#The social networking jazz tags
            -event.social_tags.split(",").each do |tag|
              %span.social-tag
                ="#" + tag.gsub(/\s+/, "")
    .rad-event
      %h1
        Know about a rad event we should be at?
      %h2
        Again, drop us a line -- we'd love to be there with you
      %button.btn.btn-lg.btn-red{type:"button", style:"margin-top:25px;margin-bottom:35px;"}
        Drop It Like It's Hot
