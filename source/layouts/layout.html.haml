  %body{:data => {:spy => "scroll", :target => ".qnav"}}
    .navbar.navbar-fixed-top.navbar-default{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{:type => "button", :data => {:target => "#main-gl-nav", :toggle => "collapse"}}
            %span.sr-only
              Toggle Navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          - if current_page.url == '/'
            %a.navbar-brand.animated
              = partial "includes/logos/wm_web.svg"
          - else
            %a.navbar-brand.animated{:href => "/"}
              = partial "includes/logos/wm_web.svg"
        .collapse.navbar-collapse#main-gl-nav
          %ul.nav.pull-right.animated.navbar-nav
            %li
              %a{:href => "/downloads", :onclick => "_gaq.push(['_trackEvent', 'Top navigation', 'Download']);"}
                Download
            %li
              %a{:href => "/pricing", :onclick => "_gaq.push(['_trackEvent', 'Top navigation', 'Pricing']);"}
